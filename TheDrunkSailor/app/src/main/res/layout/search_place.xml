<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0px"
    android:paddingRight="0px"
    android:paddingTop="0px">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/impressum_textfield"
        android:text="The Drunken Sailors 2016TM"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:allowUndo="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentBottom="true"
        android:textColor="#fff3d4" />

    <RelativeLayout tools:context=".RegistrationActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/impressum_textfield">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_weight="0.11"
            android:id="@+id/frameLayout3"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search Place"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:autoText="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout6"
            android:layout_gravity="bottom|center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find"
                android:id="@+id/searchbutton"
                android:layout_gravity="center"
                android:onClick="searchPlaceLogic"
                android:nestedScrollingEnabled="false" />
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_below="@+id/frameLayout3"
            android:orientation="horizontal"
            android:layout_above="@+id/frameLayout6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Name"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/name"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:layout_column="26"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PLZ*"
                    android:id="@+id/textView11"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/plz"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:layout_column="26"
                    android:layout_marginLeft="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Town"
                    android:id="@+id/textView13"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:id="@+id/town"
                    android:layout_column="26"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="current use min"
                    android:id="@+id/textView14"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RatingBar
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:stepSize="1"
                    android:id="@+id/occmin"
                    android:layout_column="26" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="current use max"
                    android:id="@+id/textView16"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:stepSize="1"
                    android:id="@+id/occmax"
                    android:layout_column="26" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="min ranking"
                    android:id="@+id/textView17"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:stepSize="1"
                    android:id="@+id/rankmin"
                    android:layout_column="26" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="max ranking"
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:stepSize="1"
                    android:id="@+id/rankmax"
                    android:layout_column="26" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sector"
                    android:id="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/static_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="0dp"
                    android:layout_column="26"
                    style = "@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="* required"
                    android:id="@+id/textView18"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_span="27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>
