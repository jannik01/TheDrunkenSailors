<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout tools:context=".PlaceDetailActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_weight="0.11"
            android:id="@+id/frameLayout4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/name"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/frameLayout4"
            android:layout_alignParentEnd="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:id="@+id/frameLayout5"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/imageView2"
                    android:background="#595959"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@android:drawable/ic_dialog_map" />
            </FrameLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tableLayout2"
                android:layout_alignTop="@+id/frameLayout5"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Adress:"
                        android:id="@+id/lbAddress"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:layout_column="26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Address"
                        android:layout_column="27"
                        android:width="100dp"
                        android:maxHeight="40dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Zip Code:"
                        android:id="@+id/lbPlz"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16dp"
                        android:layout_column="26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/zipcode"
                        android:layout_column="27"
                        android:maxHeight="40dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Town:"
                        android:id="@+id/lbTown"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:layout_column="26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/town"
                        android:layout_column="27"
                        android:maxHeight="40dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Country:"
                        android:id="@+id/lbCountry"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:layout_column="26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/country"
                        android:layout_column="27"
                        android:maxHeight="40dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description"
                    android:id="@+id/textView22"
                    android:layout_column="26"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView3"
                    android:layout_column="0" />
            </TableRow>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp" >

                    <ScrollView
                        android:id="@+id/scrollView4"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:foregroundGravity="fill_horizontal|fill"
                        android:fillViewport="true"
                        android:layout_height="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/description" />
                    </ScrollView>
                </TableRow>
            </FrameLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Current Use: "
                    android:id="@+id/currentuse"
                    android:layout_column="26"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/db_current_use"
                    android:layout_column="50"
                    android:layout_marginLeft="180dp"
                    android:width="50dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Your Opinion: "
                    android:id="@+id/opinionuse"
                    android:layout_column="26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rngUse"
                    android:layout_column="29"
                    android:layout_weight="1"
                    android:max="5"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3/5"
                    android:id="@+id/lbUse"
                    android:layout_column="41" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Average Rating:"
                    android:id="@+id/rating"
                    android:layout_column="26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/db_rating"
                    android:layout_column="50"
                    android:layout_marginLeft="180dp"
                    android:width="50dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Your Opinion: "
                    android:id="@+id/opinionranking"
                    android:layout_column="26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rngRanking"
                    android:layout_column="29"
                    android:layout_weight="1"
                    android:max="5"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3/5"
                    android:id="@+id/lbRank"
                    android:layout_column="41" />

            </TableRow>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Submit"
                    android:id="@+id/button"
                    android:onClick="buttonOnClick"
                    android:layout_column="26"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Friends:"
                    android:id="@+id/textView23"
                    android:layout_column="26" />
            </TableRow>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="160dp" >

                    <ListView
                        android:id="@+id/listviewfriends"
                        android:layout_width="fill_parent"
                        android:layout_height="160dp" >
                    </ListView>
                </TableRow>
            </FrameLayout>

        </TableLayout>
    </RelativeLayout>

</LinearLayout>
