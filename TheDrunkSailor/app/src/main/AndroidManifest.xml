<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.tugraz.thedrunksailor">

    <uses-permission android:name="android.permission.INTERNET"
        android:maxSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".SignInActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchDisplayActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".PlaceDetailActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".PersonSearchDisplayActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".PersonDetailActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>

        <activity
            android:name=".FragmentUtilActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        </activity>

        <activity
            android:name=".FragmentManagerActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>